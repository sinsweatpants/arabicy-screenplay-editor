# Arabic Screenplay Editor - Environment Variables Example
# انسخ هذا الملف إلى .env وأضف قيمك الخاصة

# Development Configuration
VITE_DEV_SERVER_PORT=5174
VITE_DEV_MODE=true



# API Keys (اختياري - للذكاء الاصطناعي)
# VITE_OPENAI_API_KEY=sk-your-openai-key-here
# VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# VITE_GEMINI_API_KEY=your-gemini-key-here

# Application Settings
VITE_APP_NAME="محرر السيناريو العربي"
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=ar

# Storage Configuration
VITE_STORAGE_PREFIX=screenplay_
VITE_MAX_BACKUP_COUNT=10
VITE_AUTO_SAVE_INTERVAL=30000

# Collaboration Settings
VITE_ENABLE_COLLABORATION=true
VITE_SHARE_LINK_DOMAIN=localhost:5174

# Export Settings
VITE_MAX_EXPORT_SIZE=50MB
VITE_DEFAULT_EXPORT_FORMAT=html

# Analytics (اختياري)
# VITE_ANALYTICS_ID=your-analytics-id
VITE_ENABLE_ANALYTICS=false

# Security
VITE_ENABLE_ENCRYPTION=true
VITE_SESSION_TIMEOUT=3600000

# Performance
VITE_ENABLE_CACHING=true
VITE_CACHE_EXPIRY=1800000